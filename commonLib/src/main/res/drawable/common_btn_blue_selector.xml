<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/common_size_4dp" />
            <gradient android:endColor="@color/commonBtnEnd" android:startColor="@color/commonBtn" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <corners android:radius="@dimen/common_size_4dp" />
            <gradient android:endColor="@color/commonBtnEnd" android:startColor="@color/commonBtn" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/common_size_4dp" />
            <gradient android:endColor="@color/commonBtnUnavailableEnd" android:startColor="@color/commonBtnUnavailable" />
        </shape>
    </item>
</selector>
